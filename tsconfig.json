{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
